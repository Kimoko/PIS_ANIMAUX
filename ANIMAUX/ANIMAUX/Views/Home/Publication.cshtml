@model ANIMAUX.Models.RegistrationPublication
    @{
        ViewBag.Title = "Oбъявление";
    }
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>

</head>
<body class="card-body">
    <div>
        <div class="card-header">
            <h4 style="text-align:center"> Добавить объявление</h4>
        </div>
        <div>
            @using (Html.BeginForm("Publication","Home"))
            {
                <div id="add">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Foto)
                        @Html.EditorFor(model => model.Foto)
                        

                        @*или
                        <form enctype="multipart/form-data" method="post">
                            <input type="file" name="photo" multiple accept="image/*,image/jpeg">
                        </form>*@
                            @Html.ValidationMessageFor(m => m.Foto)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Sity)
                        @Html.EditorFor(model => model.Sity)
                        @Html.ValidationMessageFor(m => m.Sity)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Name)
                        <select name="Name">
                            @foreach (var item in ViewBag.animals as IEnumerable<ANIMAUX.Models.animal>)
                            {
                                <option value="@Html.DisplayFor(modelItem => item.name)">
                                    @Html.DisplayFor(modelItem => item.name) |
                                    @Html.DisplayFor(modelItem => item.category)
                                </option>
                            }
                        </select>
                        @Html.ValidationMessageFor(m => m.Name)
                    </div>
                    @Html.LabelFor(m => m.Status)
                <div class="form-check">
                    <input type="radio" id="cock" name="Status" value="lost">Потеряно
                    <input type="radio" id="cock" name="Status" value="found" checked)>Найдено
                    @Html.ValidationMessageFor(m => m.Status)
                </div>
                    <input type="submit" value="Добавить">

                </div>
            }
        </div>
    </div>
</body>
</html>

